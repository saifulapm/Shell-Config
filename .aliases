# vim:ft=sh
# ls
alias ll='ls -laFh'
alias la='ls -laFh'
alias lh='ls -lh'
alias lR='ls -lR'
alias l='ls -lh'

# Configs
alias co='cd ~/.config/nvim/'

# bat
alias cat=bat

# vim
alias vim=nvim
alias vi=nvim
alias mvim=nvim
alias n=nvim

# git
alias ga='git add'
alias gaa='git add .'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit --amend'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gcl='git clone --depth 1'
alias gd='git diff'
alias gf='git fetch'
alias gi='git init'
alias gl='git lg'
alias gr='git reset --hard HEAD'
alias gp='git push'
alias gpf='git push -f'
alias gri='git rebase -i'
alias grc='git rebase --continue'
alias gs='git status'
alias gacp='git add . && git commit -m "update" ; git push'
alias gcap='git commit --amend --no-edit; git push -f'

# rm è¿› trash
alias rm='trash -r'
alias rm -rf='trash -r'

# fasd
alias v='f -e vim' # quick opening files with vim
alias m='f -e mplayer' # quick opening files with mplayer
alias o='a -e xdg-open' # quick opening files with xdg-open

# fzf
alias fzfvim='vim $(fzf)'
alias fzf="fzf --preview 'bat --style=numbers --color=always {} | head -500'"

# du
alias du='ncdu --color dark -rr -x --exclude .git --exclude node_modules'
alias sizeof='/usr/bin/du -sh'

# verbose
alias mv='mv -v'
alias cp='cp -v'
alias mkdir='mkdir -v'

# misc
alias c=clear
alias path='echo -e ${PATH//:/\\n}'
alias space='df -P -kHl'
